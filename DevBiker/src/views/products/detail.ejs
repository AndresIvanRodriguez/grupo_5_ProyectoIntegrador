<!--head-->
<%- include("../partials/head.ejs") %>

<title>DevBiker</title>
<link rel="stylesheet" href="/css/detail.css">
</head>

<body>
    <!--header-->
    <%- include("../partials/header.ejs") %>

    <main>
        <div class="margin-left"></div>

        <div class="principal">
            <div class="categorias">
                <%- include("../partials/nav-categorias.ejs") %>
                <h3 class="titulo"><%=product.description%></h3>
                <div class="card">

                    <article class="bikes">
                        <section>
                            <p class="nombre"><%=product.name%></p>
                        </section>
                        <section>
                            <img src="/img/<%=product.image%>" alt="Prototipo <%=product.name%> ">
                        </section>
                        <section class="datos">
                            <p class="descuento">%<%=product.discount%> OFF</p>
                            <p class="precio">$<%=product.price%></p>
                        </section>
                        <section class="caracteristicas">
                            <p class="caracteristicas-titulo">Caracteristicas</p>
                            <p class="caracteristica">Género: <%=product.caracteristicas.genero%></p>
                            <p class="caracteristica">Material del marco: <%=product.caracteristicas.material%></p>
                            <p class="caracteristica">Número de cambios: <%=product.caracteristicas.numeroCambios%></p>
                            <p class="caracteristica">Suspensión: <%=product.caracteristicas.suspension%></p>
                            <p class="caracteristica">Tipo de freno: <%=product.caracteristicas.tipoFreno%></p>
                        </section>
                    </article>

                </div>
            </div>
        </div>

        <div class="margin-right"></div>
    </main>

    <!--footer-->
    <%- include("../partials/footer.ejs") %>

</body>

</html>