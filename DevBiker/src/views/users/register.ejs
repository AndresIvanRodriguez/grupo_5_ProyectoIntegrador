<!--head-->
<%- include("../partials/head.ejs") %>

    <title>Registro</title>
    <link rel="stylesheet" href="/css/register.css" type="text/css">
</head>
<body>
    <!--header-->
    <%- include("../partials/header.ejs") %>

    <main>
        <div class="margin-left"></div>

        <div class="principal">
            <div class="container_form">
                <div class="titulo-icon">
                    <h2 class="titulo">Crear Cuenta</h2>
                    <i class="fas fa-user-plus"></i>
                </div>                

                <form action="/users" method="POST" enctype="multipart/form-data">
                    <div class="div">
                        <label for="nombre" class="label">Nombre:</label><br>
                        <input type="text" name="nombre" class="input" value="<%= locals.oldData ? oldData.nombre : null %>">
                    </div>
                    <% if(locals.errors && errors.nombre){ %>
                        <p style="color: red;"><%= errors.nombre.msg %></p>
                    <% } %>

                    <div class="div">
                        <label for="apellido" class="label">Apellidos:</label><br>
                        <input type="text" name="apellido" class="input" value="<%= locals.oldData ? oldData.apellido : null %>">
                    </div>
                    <% if(locals.errors && errors.apellido){ %>
                        <p style="color: red;"><%= errors.apellido.msg %></p>
                    <% } %>

                    <div class="div">
                        <label for="email" class="label">Email:</label><br>
                        <input type="email" name="email" class="input" value="<%= locals.oldData ? oldData.email : null %>">
                    </div>
                    <% if(locals.errors && errors.email){ %>
                        <p style="color: red;"><%= errors.email.msg %></p>
                    <% } %>
                    
                    <div class="div">
                        <label for="direccion" class="label">Domicilio:</label><br>
                        <input type="text" name="direccion" class="input" value="<%= locals.oldData ? oldData.direccion : null %>">
                    </div>
                    <% if(locals.errors && errors.direccion){ %>
                        <p style="color: red;"><%= errors.direccion.msg %></p>
                    <% } %>

                    <div class="div">
                        <label for="fechaNacimiento" class="label">Fecha nacimiento:</label><br>
                        <input type="date" name="fechaNacimiento" class="input" value="<%= locals.oldData ? oldData.fechaNacimiento : null %>">
                    </div>

                    <% if(locals.errors && errors.fechaNacimiento){ %>
                        <p style="color: red;"><%= errors.fechaNacimiento.msg %></p>
                    <% } %>

                    <div class="div">
                        <label for="password" class="label">Contrase√±a:</label><br>
                        <input type="password" name="password" class="input" value="<%= locals.oldData ? oldData.password : null %>">
                    </div>
                    <% if(locals.errors && errors.password){ %>
                        <p style="color: red;"><%= errors.password.msg %></p>
                    <% } %>

                    <div class="div">
                        <label for="imagen" class="label">Agregar imagen:</label><br>
                        <input type="file" name="imagen" class="input" value="<%= locals.oldData ? oldData.imagen : null %>">
                    </div>
                    <% if(locals.errors && errors.imagen){ %>
                        <p style="color: red;"><%= errors.imagen.msg %></p>
                    <% } %>

                    <div class="check">
                        <div>
                            <label for="condiciones">Terminos Y Condiciones </label>
                            <input type="checkbox"  name="condiciones" required>
                        </div>
                        <div>
                            <label for="terminos">Terminos De Uso </label>
                            <input type="checkbox" name="terminos" required>
                        </div>
                    </div>
                    
                    <div class="obligatorio">
                        <p>Campos son obligatorios*</p>
                    </div>
                    
                    <div class="div-button">
                        <button type="submit" class="button">Crear cuenta</button>
                        <button type="reset" class="button">Restablecer</button>
                    </div>  
                </form>
            </div>
        </div>

        <div class="margin-left"></div>
    </main>

    <!--footer-->
    <%- include("../partials/footer.ejs") %>
</body>
</html>