<%- include("../partials/head.ejs") %>
    <title>users-index</title>
    <link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <%- include("../partials/header.ejs") %>
    <main>
        <div class="principal">
            <h1>Index de los productos</h1>
            <label for="">
                <div class="row">
                    <div class="titulo">
                        <p>ID</p>
                        <p>Usuario</p>
                        <p>Editar</p>
                        <p>Eliminar</p>
                    </div>
                    <div class="items">
                        <% users.forEach(user => {  %>
                        <table class="table">
                        <tr class="products">
                            <td><%=user.id %></td>
                            <td><%=user.nombre %></td>
                            <td>
                                <form action="/users/editar/<%= user.id %>" method="get" >
                                    <input type="submit" value="Editar" >
                                </form>
                            </td>
                            <td>
                                <form action="/users/delete/<%= user.id %>?_method=delete" method="POST">
                                    <button type="submit">Eliminar</button>
                                </form>  
                            </td>  
                        </tr>
                        </table>
                        <% }); %>
                    </div>
                </div>
        </div>
    </main>
    <!--footer-->
    <%- include("../partials/footer.ejs") %>
</body>
</html>s