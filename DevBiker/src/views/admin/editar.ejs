<!--head-->
<%- include("../partials/head.ejs") %>

    <title>Registro</title>
    <link rel="stylesheet" href="/css/createProduct.css" type="text/css">
</head>
<body>
    <%- include("../partials/header.ejs") %> 
    <main>

        <div class="margin-left"></div>

        <div class="principal">

            <div class="container-form">
                <div>
                    <h2 class="titulo">Editar producto</h2>
                </div>
                <form id="edit" action="/admin/editar/<%= productToEdit.id%>?_method=PATCH" method="POST">
                   
                    <div>
                        <label for="nombre">Nombre del producto:</label>  
                        <input id="nombre" type="text" name="nombre" value="<%= productToEdit.nombre %>">
                    </div>
                    <div>
                        <label for="precio">Valor del producto:</label>
                        <input id="valor" type="number" name="precio" value="<%= productToEdit.precio %>" >
                    </div>
                    <div>
                        <label for="color">Color:</label>
                        <input id="color" type="text" name="color" value="<%= productToEdit.color %>" >
                    </div>
                    <div>
                        <label for="descuento">Descuento:</label>
                        <input id="descuento" type="text" name="descuento" value="<%= productToEdit.descuento %>" >
                    </div>
                    <div>
                        <label for="stock">Stock:</label>
                        <input id="stock" type="number" name="stock" value="<%= productToEdit.stock %>" >
                    </div>
                    <div>
                        <label for="categoria">Categoria:</label>
                        <select id="categoria" name="categoria" value="<%= productToEdit.categoria %>">
                            <option>------------------</option>
                            <option value="<%= productToEdit.cetgoria %>" >Ruta</option>
                            <option value="<%= productToEdit.cetgoria %>" >BMX</option>
                            <option value="<%= productToEdit.cetgoria %>" >Urbano</option>
                            <option value="<%= productToEdit.cetgoria %>" >Montaña</option>
                        </select>
                    </div>
                    <div>
                        <label for="genre">Genero:</label>
                        <select name="genre">
                            <option>------------------</option>
                            <option value="<%= productToEdit.genre %>" >Hombre</option>
                            <option value="<%= productToEdit.genre %>" >Mujer</option>
                            <option value="<%= productToEdit.genre %>" selected>Unisex</option>
                        </select>
                    </div>
                    <div>
                        <label for="descripcion">Descripcion del producto:</label>
                        <input id="descripcion" type="text" name="descripcion" value="<%= productToEdit.descripcion %>" selected></input>
                    </div>
                    <div>
                        <label class="caracteristicas">Caracteristicas</label>
                        <div>
                            <label for="material">Material marco:</label>
                            <input id="marco" type="text" name="material" value="<%= productToEdit.material %>">
                        </div>
                        <div>
                            <label for="numDeCambios">Numero de cambios:</label>
                            <input id="camibios" type="text" name="numDeCambios" value="<%= productToEdit.numDeCambios %>">
                        </div>
                        <div>
                            <label for="tipoFreno">Tipo de freno:</label>
                            <input id="frenos" type="text" name="tipoFreno" value="<%= productToEdit.tipoFreno %>">
                        </div>
                        <div>
                            <label for="suspension">Suspención:</label>
                            <input id="suspension" type="text" name="suspension" value="<%= productToEdit.suspension %>">
                        </div>
                        <div>
                            <label for="imagen">Cambiar imagen</label>
                            <img src="/img/<%=productToEdit.imagen%>" alt="Prototipo <%=productToEdit.nombre%> ">
                            <input type="file" name="imagen" id="image" value="<%= productToEdit.imagen %>">
                        </div>
                    </div>

                    <div>
                        <button class="submit" type="submit">Guardar cambios</button>
                    </div>

                </form>
            </div>
        </div>

        <div class="margin-right"></div>

    </main>
    <%- include("../partials/footer.ejs") %>
    <script src="/js/validationAdminCreateProducto.js"></script>
</body>
</html>