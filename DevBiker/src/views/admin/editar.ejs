<!--head-->
<%- include("../partials/head.ejs") %>

    <title>Registro</title>
    <link rel="stylesheet" href="/css/createProduct.css" type="text/css">
</head>
<body>
    <%- include("../partials/header.ejs") %> 
    <main>

        <div class="margin-left"></div>

        <div class="principal">

            <div class="container-form">
                <div>
                    <h2 class="titulo">Editar producto</h2>
                </div>
                <form action="/admin/editar/<%= productToEdit.id%>?_method=PATCH" method="POST">
                   
                    <div>
                        <label for="name">Nombre del producto:</label>  
                        <input type="text" name="name" value="<%= productToEdit.name %>">
                    </div>
                    <div>
                        <label for="price">Valor del producto:</label>
                        <input type="number" name="price" value="<%= productToEdit.price %>" >
                    </div>
                    <div>
                        <label for="color">Color:</label>
                        <input type="text" name="color" value="<%= productToEdit.color %>" >
                    </div>
                    <div>
                        <label for="discount">Descuento:</label>
                        <input type="text" name="discount" value="<%= productToEdit.discount %>" >
                    </div>
                    <div>
                        <label for="stock">Stock:</label>
                        <input type="number" name="stock" value="<%= productToEdit.Stock %>" >
                    </div>
                    <div>
                        <label for="category">Categoria:</label>
                        <select name="category" value="<%= productToEdit.category %>">
                            <option>------------------</option>
                            <option>Ruta</option>
                            <option>BMX</option>
                            <option>Urbano</option>
                            <option>Montaña</option>
                        </select>
                    </div>
                    <div>
                        <label for="tipo">Tipo:</label>
                        <select name="tipo" value="<%= productToEdit.tipo %>">
                            <option>------------------</option>
                            <option>Mas Vendido</option>
                            <option>Promocion</option>
                            <option>Nueva</option>
                        </select>
                    </div>
                    <div>
                        <label for="genero">Genero:</label>
                        <select name="genero" value="<%= productToEdit.genero %>">
                            <option>------------------</option>
                            <option>Hombre</option>
                            <option>Mujer</option>
                            <option>Unisex</option>
                        </select>
                    </div>
                    <div>
                        <label for="image">Cargar imagen</label>
                        <input type="file" name="image" id="image" value="<%= productToEdit.imge %>">
                    </div>
                    <div>
                        <label for="description">Descripcion del producto:</label>
                        <textarea name="description" cols="10" rows="3" value="<%= productToEdit.description %>"></textarea>
                    </div>
                    <div>
                        <label for="file" class="caracteristicas">Caracteristicas</label>
                        <div>
                            <label for="material">Material marco:</label>
                            <input type="text" name="material" value="<%= productToEdit.material %>">
                        </div>
                        <div>
                            <label for="numeroCambios">Numero de cambios:</label>
                            <input type="text" name="numeroCambios" value="<%= productToEdit.numeroCambios %>">
                        </div>
                        <div>
                            <label for="tipoFreno">Tipo de freno:</label>
                            <input type="text" name="tipoFreno" value="<%= productToEdit.tipoFreno %>">
                        </div>
                        <div>
                            <label for="suspension">Suspención:</label>
                            <input type="text" name="suspension" value="<%= productToEdit.suspension %>">
                        </div>
                    </div>

                    <div>
                        <button class="submit" type="submit">Guardar cambios</button>
                    </div>

                </form>
            </div>
        </div>

        <div class="margin-right"></div>

    </main>
    <%- include("../partials/footer.ejs") %>
</body>
</html>