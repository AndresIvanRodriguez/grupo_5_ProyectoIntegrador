<!--head-->
<%- include("../partials/head.ejs") %>

    <title>Registro</title>
    <link rel="stylesheet" href="/css/createProduct.css" type="text/css">
</head>
<body>
    <%- include("../partials/header.ejs") %> 
    <main>

        <div class="margin-left"></div>

        <div class="principal">

            <div class="container-form">
                <div>
                    <h2 class="titulo">Crea tu producto</h2>
                </div>
                <form id="create" action="/admin" method="POST" enctype="multipart/form-data">
                   
                    <div>
                        <label for="nombre">Nombre producto:</label>  
                        <input id="nombre" type="text" name="nombre" placeholder="Nombre del producto" required>
                    </div>
                    <div>
                        <label for="precio">Valor del producto:</label>
                        <input id="valor" type="number" name="precio" placeholder="Precio" required>
                    </div>
                    <div>
                        <label for="color">Color:</label>
                        <input id="color" type="text" name="color" placeholder="Color" required>
                    </div>
                    <div>
                        <label for="descuento">Descuento:</label>
                        <input id="descuento" type="text" name="descuento" placeholder="Descuento" required>
                    </div>
                    <div>
                        <label for="stock">Stock:</label>
                        <input id="stock" type="number" name="stock" placeholder="Stock" required>
                    </div>
                    <div>
                        <label for="categoriaId">Categoria:</label>
                        <select id="categoria" name="categoriaId" required>
                            <option>Elige una categoria</option>
                            <option>Ruta</option>
                            <option>BMX</option>
                            <option>Urbano</option>
                            <option>Montaña</option>
                        </select>
                    </div>
                    <div>
                        <label for="genre">Genero:</label>
                        <select id="genero" name="genre" required>
                            <option value="" selected disabled>Elige un genero</option>
                            <option>Hombre</option>
                            <option>Mujer</option>
                            <option>Unisex</option>
                        </select>
                    </div>
                    <div>
                        <label for="imagen">Cargar imagen</label>
                        <input  id="imagen" type="file" name="imagen" id="image">
                    </div>
                    <div>
                        <label for="descripcion">Descripcion del producto:</label>
                        <input id="descripcion" type="text" name="descripcion" required>
                    </div>
                    <div>
                        <label class="caracteristicas">Caracteristicas</label>
                        <div>
                            <label for="material">Material marco:</label>
                            <input id="marco" type="text" name="material" required>
                        </div>
                        <div>
                            <label for="numDeCambios">Numero de cambios:</label>
                            <input id="camibios" type="number" name="numDeCambios" required>
                        </div>
                        <div>
                            <label for="tipoFreno">Tipo de freno:</label>
                            <input id="frenos" type="text" name="tipoFreno" required>
                        </div>
                        <div>
                            <label for="suspension">Suspención:</label>
                            <input id="suspension" type="text" name="suspension" required>
                        </div>
                    </div>
                    <ul id="nombr"> </ul>
                    <div>
                        <input class="button" type="submit" value="Crear Producto">
                    </div>

                </form>
            </div>
        </div>

        <div class="margin-right"></div>

    </main>
    <%- include("../partials/footer.ejs") %>
    <script src="/js/validationAdminCreateProducto.js"></script>
</body>
</html>